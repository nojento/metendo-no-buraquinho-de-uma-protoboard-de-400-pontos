int led1 = D1;
#define led2  D2

char coisa;

void setup()
{
Serial.begin(115200);
pinMode(led1 , OUTPUT);
pinMode(led2 , OUTPUT);
}

void loop()
{
if(Serial.available()>0)
{
  coisa = Serial.read();
  switch(coisa)
  {
    case 'A':
    digitalWrite(led1 , HIGH);
    break;

    case 'a':
    digitalWrite(led1 , LOW);
    break;
   
    case 'B':
    digitalWrite(led2 , HIGH);
    break;

    case 'b':
    digitalWrite(led2 , LOW);
    break;
   
  }
 }
}
